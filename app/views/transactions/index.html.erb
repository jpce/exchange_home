<p id="notice"><%= notice %></p>

<h1>Listing Transactions</h1>

<table>
  <thead>
    <tr>
      <th>Foreign exchange</th>
      <th>Client</th>
      <th>Exchange rate</th>
      <th>Amount</th>
      <th>Value date</th>
      <th>Company</th>
      <th>Operation type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.foreign_exchange_id %></td>
        <td><%= transaction.client_id %></td>
        <td><%= transaction.exchange_rate_id %></td>
        <td><%= transaction.amount %></td>
        <td><%= transaction.value_date %></td>
        <td><%= transaction.company_id %></td>
        <td><%= transaction.operation_type %></td>
        <td><%= link_to 'Show', transaction %></td>
        <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
        <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

