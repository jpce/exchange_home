<p id="notice"><%= notice %></p>

<h1>Listing Exchange Rates</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Value</th>
      <th>Foreing exchange orig</th>
      <th>Foreing exchange dest</th>
      <th>Operation type</th>
      <th>Value date</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exchange_rates.each do |exchange_rate| %>
      <tr>
        <td><%= exchange_rate.date %></td>
        <td><%= exchange_rate.value %></td>
        <td><%= exchange_rate.foreing_exchange_orig_id %></td>
        <td><%= exchange_rate.foreing_exchange_dest_id %></td>
        <td><%= exchange_rate.operation_type %></td>
        <td><%= exchange_rate.value_date %></td>
        <td><%= exchange_rate.company_id %></td>
        <td><%= link_to 'Show', exchange_rate %></td>
        <td><%= link_to 'Edit', edit_exchange_rate_path(exchange_rate) %></td>
        <td><%= link_to 'Destroy', exchange_rate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

